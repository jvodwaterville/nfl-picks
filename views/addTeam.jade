extends layout

block content
    div(class="container text-center")
        if error
            p(class="h4") #{error}
        if correct
            p(class="h4") #{correct}
        span(class="h4") Add New Team:
        form(class="form-horizontal", role="form", name="register", action='/admin/addteam', method="post",onsubmit="return validateRegisterForm()", id="register-form")
                    input(type="hidden", name="_csrf", value=csrfToken)
                    div(class="form-group")
                        label(class="control-label col-sm-2", for="city") City:
                        div(class="col-sm-10")
                            input(type="text", class="form-control", id="city", name="city", placeholder="City", required)
                    div(class="form-group")
                        label(class="control-label col-sm-2", for="tname") Team Name:
                        div(class="col-sm-10")
                            input(type="text", class="form-control", id="tname", name="tname", placeholder="Team Name", required)
                    div(class="form-group")
                        label(class="control-label col-sm-2", for="div") Division:
                        div(class="col-sm-10")
                            input(type="text", class="form-control", id="div", name="div", placeholder="Division", required)
                    button(type="submit",class="btn btn-default") Add Team
